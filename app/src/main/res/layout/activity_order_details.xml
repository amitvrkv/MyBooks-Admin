<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mybooks.mybooks_admin.OrderDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout3">

        <ImageView
            android:id="@+id/oderDetailsBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/backButtonPadding"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/orderDetialsId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Orders ID: "
            android:textColor="@color/colorTextIcon"
            android:textSize="@dimen/toolbarTextSize" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/orderDetailsRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout3"/>


</RelativeLayout>
